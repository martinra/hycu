Import("env")


include_path_test = [
    env["root_dir"] + "/test"
]

libs_test = [
  "boost_unit_test_framework"
  ]


env_test = env.Clone()
env_test.Append(
    CPPPATH  = include_path_test
  , LIBS     = libs_test
  )


sources_test = Glob("./*.cc")

Import("objs_curve")


test = env_test.Program(
    "test"
  , sources_test + objs_curve
  )

Export("test")
